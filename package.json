{
    "name": "appstarttool",
    "version": "0.0.1",
    "description": "常用app脚手架",
    "requires": true,
    "main": "index.js",
    "scripts": {
        "start": "sh ./script/start.sh",
        "dll": "webpack --config ./build/webpack_dll.js",
        "build": "sh ./script/build.sh",
        "commit": "npx git-cz",
        "server": "node ./server/index.js",
        "test": "jest",
        "pretty": "pretty-quick",
        "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "keywords": [
        "常用app脚手架"
    ],
    "author": "hblvsjtu",
    "license": "MIT",
    "dependencies": {
        "@babel/runtime": "^7.9.6",
        "core-js": "^3.6.5",
        "lodash": "^4.17.15"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "babel-loader": "^8.0.0-beta.0",
        "clean-webpack-plugin": "^3.0.0",
        "commitizen": "^4.1.2",
        "conventional-changelog-cli": "^2.0.34",
        "css-loader": "^3.5.3",
        "cz-conventional-changelog": "^3.2.0",
        "express": "^4.17.1",
        "file-loader": "^6.0.0",
        "happypack": "^5.0.1",
        "html-webpack-plugin": "^4.3.0",
        "html-webpack-tags-plugin": "^2.0.17",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "less": "^3.11.1",
        "less-loader": "^6.0.0",
        "mini-css-extract-plugin": "^0.9.0",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "style-loader": "^1.2.1",
        "url-loader": "^4.1.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2",
        "webpack-parallel-uglify-plugin": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "maxHeaderWidth": 100,
            "maxLineWidth": 100,
            "defaultType": "",
            "defaultScope": "",
            "defaultSubject": "",
            "defaultBody": "",
            "defaultIssues": "",
            "types": {
                "feat": {
                    "description": "A new feature",
                    "title": "Features"
                },
                "fix": {
                    "description": "A new fix",
                    "title": "Features"
                },
                "docs": {
                    "description": "A new docs",
                    "title": "Features"
                },
                "style": {
                    "description": "A new style",
                    "title": "Features"
                },
                "refactor": {
                    "description": "A new refactor",
                    "title": "refactor"
                },
                "test": {
                    "description": "A new test",
                    "title": "test"
                },
                "revert": {
                    "description": "A new revert",
                    "title": "revert"
                },
                "config": {
                    "description": "A new config",
                    "title": "config"
                },
                "chore": {
                    "description": "A new chore",
                    "title": "chore"
                }
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "jest & pretty-quick --staged"
        }
    }
}
